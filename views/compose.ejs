<%- include("partials/header") -%>
      <h1 class="mt-3 mb-3">Compose</h1>

      <form action="/compose" method="post">
        <div class="form-group mb-3">
          <label for="postTitleInput">Title</label>
          <input
            class="form-control"
            type="text"
            name="postTitle"
            id="postTitleInput"
            required
          >
        </div>

        <div class="form-group mb-3">
          <label for="postContentInput">Post</label>
          <textarea
            class="form-control"
            name="postContent"
            id="postContentInput"
            cols="30"
            rows="5"
            required
          ></textarea>
        </div>

        <button class="btn btn-primary" type="submit" name="button">Publish</button>
      </form>
<%- include("partials/footer") -%>
